{% extends "base.jinja" %}
{% from "macro/navbar.jinja" import default_navbar %}

{% block title %}Manage Users{% endblock title %}

{% block body %}
<body>
    {{
        default_navbar(
            '用户管理',
            [
                ('a', '/admin', '题目管理'),
                ('a', '/admin/users', '用户管理')
            ],
            [
                ('a', '/admin/logout', '退出登录')
            ]
        )
    }}
    <div class="container">
        <h1>普通用户</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>用户名</th>
                    <th>Token</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.token }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <h1>管理员</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>username</th>
                </tr>
            </thead>
            <tbody>
                {% for admin in admins %}
                <tr>
                    <td>{{ admin.id }}</td>
                    <td>{{ admin.username }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</body>
{% endblock body %}

