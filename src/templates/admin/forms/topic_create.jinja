<form class="form" action="/admin/create_topic" method="post">
<h3>添加题目</h3>
{{ form.csrf_token }}

<div class="form-group row">
    {{ form.name.label(class='col-md-2 col-form-label') }}
    <div class="col-md-10">
        {{ form.name(class='form-control') }}
    </div>
</div>

<div class="form-group row">
    {{ form.type.label(class='col-md-2 col-form-label') }}
    <div class="col-md-10">
        {{ form.type(class='form-control') }}
    </div>
</div>

<div class="form-group row">
    {{ form.flag.label(class='col-md-2 col-form-label') }}
    <div class="col-md-10">
        {{ form.flag(class='form-control') }}
    </div>
</div>

<div class="form-group row">
    {{ form.redbag.label(class='col-md-2 col-form-label') }}
    <div class="col-md-10">
        {{ form.redbag(class='form-control') }}
    </div>
</div>

<button class="btn btn-sm btn-success">添加</button>
{% if error %}{{ error }}{% endif %}
</form>
